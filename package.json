{
	"name": "react-parcel-boilerplate",
	"version": "0.0.0",
	"private": true,
	"description": "Minimalism React boilerplate powered by Typescript, Parcel and TailwindCSS",
	"repository": {
		"type": "git",
		"url": "https://github.com/boilertowns/react-parcel-boilerplate.git"
	},
	"scripts": {
		"build": "parcel build src/index.html",
		"dev": "parcel src/index.html --port 2022",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"prepare": "husky install",
		"serve": "http-server -p 2022 ./dist",
		"test": "jest"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,mdx,yml,json}": [
			"prettier --write"
		]
	},
	"browserslist": [
		"defaults",
		"> 0.5%",
		"last 2 versions",
		"not dead"
	],
	"dependencies": {
		"dayjs": "^1.11.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-helmet-async": "^1.3.0",
		"react-router-dom": "^6.4.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@parcel/config-default": "^2.7.0",
		"@trivago/prettier-plugin-sort-imports": "^3.3.0",
		"@types/react": "^18.0.20",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"autoprefixer": "^10.4.12",
		"eslint": "8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.8",
		"eslint-plugin-react-hooks": "^4.6.0",
		"http-server": "^14.1.1",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.0",
		"parcel": "^2.7.0",
		"parcel-reporter-static-files-copy": "^1.4.0",
		"postcss": "^8.4.17",
		"prettier": "^2.6.2",
		"process": "^0.11.10",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=16"
	},
	"staticFiles": {
		"staticPath": "src/assets/static"
	}
}
